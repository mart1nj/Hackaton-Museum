@using Open.Data.User
@using Open.Sentry.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)">
        <a class="nav-link" asp-action="Index">Profile</a>
    </li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)">
        <a class="nav-link" asp-action="ChangePassword">Password</a>
    </li>
    @if (hasExternalLogins) {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)">
            <a class="nav-link" asp-action="ExternalLogins">External logins</a>
        </li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)">
        <a class="nav-link" asp-action="TwoFactorAuthentication">Two-factor authentication</a>
    </li>
</ul>
